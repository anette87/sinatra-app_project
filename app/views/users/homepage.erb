<h1><%= "Welcome, #{Helpers.current_user(session).username}" %></h1>

<label><h2>Your favorites rides list!</h2></label>
<ul>
    <% @favorites.each do |favorite| %>
        <li><a href= "/rides/<%=favorite.ride.slug%>"><%=favorite.ride.name%></a></li>
    <%end%>
</ul>

<% if @favorites.length == 0 %>
    <p><a href="/favorites/new">Create Your List</a></p>
<% else %>
    <p><a href="/favorites/edit">Edit Your Favorites List</a></p>
<% end%>
<p><a href="/rides">See Rides List</a></p>


















